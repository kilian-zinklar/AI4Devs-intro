---
import '../styles/global.css';
---
<html>
  <head>
    <title>Inversor de Cadenas</title>
  </head>
  <body class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
      <h1 class="text-2xl font-bold mb-4">Inversor de Cadenas</h1>
      <input id="inputText" type="text" class="border p-2 w-full mb-4" placeholder="Introduce una cadena" />
      <button id="reverseButton" class="bg-blue-500 text-white p-2 w-full rounded">Invertir</button>
      <p id="result" class="mt-4 text-lg"></p>
    </div>
    <script>
      document.getElementById('reverseButton').addEventListener('click', () => {
        const inputText = document.getElementById('inputText').value;
        const reversedText = inputText.split('').reverse().join('');
        document.getElementById('result').innerText = reversedText;
      });
    </script>
  </body>
</html>